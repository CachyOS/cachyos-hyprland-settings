{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "control-center-margin-top": 10,
  "control-center-margin-bottom": 10,
  "control-center-margin-right": 10,
  "notification-icon-size": 64,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "timeout": 10,
  "timeout-low": 5,
  "timeout-critical": 0,
  "fit-to-screen": false,
  "control-center-width": 500,
  "control-center-height": 1033,
  "notification-window-width": 500,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": true,
  "widgets": [
    "title",
    "dnd",
    "notifications",
    "mpris",
    "buttons-grid",
    "volume",
    "backlight",
    "inhibitors"
  ],
  "widget-config": {
    "title": {
      "text": "CachyOS Control Center",
      "clear-all-button": true,
      "button-text": "󰆴 Clear"
    },
    "dnd": {
      "text": "Block Notifications"
    },
    "label": {
      "max-lines": 1,
      "text": "Notification Center"
    },
    "mpris": {
      "image-size": 100,
      "image-radius": 0,
      "blacklist": [
        "kew"
      ]
    },
    "volume": {
      "label": "󰕾"
    },
    "backlight": {
      "label": "󰃟"
    },
    "buttons-grid": {
      "actions": [
        {
          "label": "󰐥",
          "command": "nwg-bar"
        },
        {
          "label": "󰆴",
          "command": "swaync-client -C"
        },
        {
          "label": "󰕾",
          "command": "pavucontrol",
          "type": "toggle"
        },
        {
          "label": "󰂯",
          "command": "blueman-manager"
        },
        {
          "label": "",
          "command": "kooha"
        },
        {
          "label": "",
          "command": "grimblast copy output || exit"
        },
        {
          "label": "🌐",
          "command": "firefox"
        },
        {
          "label": "🔘",
          "command": "cachyos-hello"
        },
        {
          "label": ">_",
          "command": "alacritty"
        },
        {
          "label": "📟",
          "command": "alacritty -e btop --force-utf"
        }
      ]
    }
  }
}
